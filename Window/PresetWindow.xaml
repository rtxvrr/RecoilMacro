<Window x:Class="RecoilMacro.Window.PresetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecoilMacro.Window"
        mc:Ignorable="d"
        Title="Enter Preset Name" Height="150" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <Label Content="{Binding Path=Title}"/>
        <TextBox x:Name="inputTextBox"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Name="SaveButton" Content="Save" Click="SaveButton_Click"/>
            <Button Name="SaveChangesButton" Content="Save Changes" Click="SaveChangesButton_Click" Visibility="Collapsed"/>
            <Button Content="Cancel" Click="CancelButton_Click" Margin="5,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
